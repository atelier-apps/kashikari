<div class="contract-area status-<%=Status.find(@contract.status_id).key %>">
  <div class="title">契約書</div>
  <div class="option">
    <div onclick="option(<%=@contract_id %>);"><%=image_tag('icon_option.png', { :border => '0', :alt => 'オプション'}) %></div>

  </div>
  <%= render partial: "detail" %>
  <%= render partial: "payback" %>
</div>
<% if @filtered_payments.length>0 then %>
  <div class="sub-area">
    <%= render partial: "history" %>
  </div>
<% end %>
<div class="hidden">
  <div id="option" class="alert-content">
    <%= button_to "友人に共有する", sendAgreement_path(contract_id: @contract.id, passcode: @contract.passcode) %>
    <div onclick="delete_contract(<%=@contract_id %>);" class="button sub">この契約書を削除</div>
  </div>
</div>
<% message= flash[:payment_message] %>
<% if !message.blank? then %>
<%= message.html_safe %>
<% end %>
