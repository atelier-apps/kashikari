<div class="title">返済</div>
<div class="content">
  <%= form_for Payment.new do |f| %>
  <div class="form">
    <%= f.label :amount, "返済金額" %>
    <%= f.number_field :amount, :required => true %>
  </div>
  <div class="form">
    <%= f.label :note, "メモ" %>
    <%= f.text_field :note %>
  </div>
  <%= f.hidden_field :contract_id, value: @contract_id %>
  <div class="text">
    上記のとおり、返済いたしました
  </div>
  <div class="form">
    <%= f.submit "確定する", data: { disable_with: '追加中' }  %>
  </div>
  <% end %>
</div>
