<div class="scrollable">
<% if @mode=="NOT_FOUND" then %>
  <div class="contract-area">このてがたは存在しません</div>
<% elsif @mode=="DELETED"%>
  <div class="contract-area">このてがたは貸方により削除されました</div>
<% else %>
  <div class="contract-area status-<%=Status.find(@contract.status_id).key %>">
    <div class="title">てがた控え</div>
        <%= render partial: "detail" %>
    </div>
  </div>
  <div class="sub-area">
    <%= render partial: "history" %>
  </div>
<% end %>

</div>
