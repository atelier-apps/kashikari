<div>＊リリース版では、この画面の代わりにLINE画面を使用する</div>
<hr>
<h1>リンク</h1>
<%= link_to("立替書作成",contract_new_path) %>
<%= link_to("立替書管理",contract_list_path) %>

<h1>デバッグ用データ</h1>
<h2>ユーザアカウント</h2>
<% @friends.each do |friend| %>
<div>
  [<%=friend.id %>]<%=friend.name %>
</div>
<% end %>
<h2>契約書レコード</h2>
<% @contracts.each do |contract| %>
      <div class="list" onclick="window.location='contract?contract_id=<%=contract.id%>';">
        <div class="main">
          [<%=contract.id %>, <%=contract.passcode %>] <%=contract.amount %>円 |状態: <%=contract.status %> |種別: <%=contract.note %> |貸方ID: contract.user_id |借方: <%=@frineds.find(contract.friend_id).name%> |期限: <%=contract.deadline %>|
        </div>
      </div>
<% end %>
<h2>返済レコード</h2>
<% @payments.each do |payment| %>
<div class="list" onclick="window.location='payback_agree?payment_id=<%=payment.id%>';">
  <div class="main">
        [<%=payment.contract_id %>]に対する返済申請 <br>
        <%=payment.amount %>円 | <%=payment.created_at %>
      </div>
      </div>
<% end %>
