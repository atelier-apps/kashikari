<h1>リンク</h1>
<%= link_to("立替書作成",contract_new_path) %>
<%= link_to("立替書管理",contract_list_path) %>

<h1>デバッグ用データ</h1>
<h2>ユーザアカウント</h2>
<% @users.each do |user| %>
<div>
  [<%=user.id %>]<%=user.name %> | アカウント: <%=user.account %>
</div>
<% end %>
<h2>返済レコード</h2>
<% @payments.each do |payment| %>
<div class="list" onclick="window.location='payback_agree?payment_id=<%=payment.id%>';">
  <div class="main">
        [<%=payment.contract_id %>]に対する返済申請 <br>
        <%=payment.amount %>円 | <%=payment.note %> | <%=payment.status %>
      </div>
      </div>
<% end %>
